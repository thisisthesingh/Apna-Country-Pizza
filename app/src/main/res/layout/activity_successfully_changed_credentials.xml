<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/background"
    tools:context=".SuccessfullyChangedCredentials">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/greentick"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/credentialschanged"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/muli_black"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/loginbtn_changed_credentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="16dp"
        android:background="#faee5a"
        android:elevation="20dp"
        android:onClick="callLoginAgain"
        android:fontFamily="@font/muli_black"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="10dp" />

    <ProgressBar
        android:id="@+id/progrss_br"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:indeterminateTint="@color/black"
        android:visibility="invisible"/>




</LinearLayout>